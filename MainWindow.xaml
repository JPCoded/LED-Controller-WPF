<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WPF_LED_Controller" x:Class="WPF_LED_Controller.MainWindow"
        Title="LED Controller" ResizeMode="CanMinimize"  Width="301" Height="364">
    <Window.Resources>

        <Style x:Name="Border" x:Key="BorderPreview" TargetType="Border">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="5" />
            <Setter Property="Width" Value="90"/>
            <Setter Property="Height" Value="30"/>
        </Style>
        <Style x:Name="SavedHover" x:Key="SavedHoverPanel" TargetType="StackPanel">
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Height" Value="57"/>
            <Setter Property="Width" Value="90" />
        </Style>

    </Window.Resources>
    <Grid Margin="0,0,-5,-3" Width="300">

        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Menu x:Name="mnMain" Height="32" VerticalAlignment="Top"  ClipToBounds="True" HorizontalAlignment="Left" Width="300">
            <MenuItem x:Name="miFile" Width="47" Header="File" Height="32" FontWeight="Bold">
                <MenuItem x:Name="miSave" Header="Save" Click="miSave_Click"/>
                <MenuItem x:Name="miOpen" Header="Open" Click="miOpen_Click"/>
            </MenuItem>
        </Menu>

        <StackPanel Style="{StaticResource SavedHoverPanel}" Margin="6,239,0,0" >
            <Label Content="Saved" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <Border Style="{StaticResource BorderPreview}">
                <Label x:Name="lblSaved" Content=""/>
            </Border>
        </StackPanel>

        <StackPanel Style="{StaticResource SavedHoverPanel}" Margin="119,239,0,0">
            <Label Content="Hover" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <Border Style="{StaticResource BorderPreview}">
                <Label x:Name="lblHover" Content=""/>
            </Border>
        </StackPanel>
        <Button Content="Set" HorizontalAlignment="Left" Margin="10,310,0,0" VerticalAlignment="Top" Width="75"/>
        <local:PortList x:Name="plPorts" HorizontalAlignment="Left" Margin="214,148,0,0" VerticalAlignment="Top"/>
        <local:ColorPicker x:Name="cpColor" HorizontalAlignment="Left" Margin="6,33,0,0" VerticalAlignment="Top" MouseDown="cpColor_MouseDown" MouseMove="cpColor_MouseMove"/>
    </Grid>
</Window>
    
   
