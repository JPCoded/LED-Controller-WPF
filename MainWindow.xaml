<Window x:Class="WPF_LED_Controller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:UserControls="clr-namespace:WPF_LED_Controller.UserControls"
        xmlns:local="clr-namespace:WPF_LED_Controller"
        Title="LED Controller"
        Width="305"
        Height="381"
        ResizeMode="CanMinimize"
        SizeToContent="WidthAndHeight">
    <Grid Margin="0,0,0,0" UseLayoutRounding="True">

        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Color="Black" />
                <GradientStop Offset="1" Color="White" />
            </LinearGradientBrush>
        </Grid.Background>
        <Menu x:Name="mnMain"
              Width="299"
              Height="32"
              HorizontalAlignment="Left"
              VerticalAlignment="Top"
              ClipToBounds="True">
            <MenuItem x:Name="miFile"
                      Width="47"
                      Height="32"
                      FontWeight="Bold"
                      Header="File">
                <MenuItem x:Name="miSave"
                          Click="miSave_Click"
                          Header="Save" />
                <MenuItem x:Name="miOpen"
                          Click="miOpen_Click"
                          Header="Open" />
            </MenuItem>
        </Menu>
        <Button x:Name="btnSet"
                Width="75"
                Margin="7,327,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="btnSet_Click"
                Content="Set" />
        <UserControls:PortList x:Name="plPorts"
                               Margin="213,221,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top" />
        <UserControls:ColorPicker x:Name="cpColor"
                                  Width="299"
                                  Height="225"
                                  Margin="0,33,0,0"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Top"
                                  MouseMove="cpColor_MouseMove" />


        <UserControls:PreviewLabel x:Name="pwlSaved"
                                   Width="91"
                                   Height="57"
                                   Margin="2,263,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top" />
        <UserControls:PreviewLabel x:Name="pwlHover"
                                   Width="91"
                                   Height="57"
                                   Margin="112,263,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top" />





    </Grid>
</Window>


