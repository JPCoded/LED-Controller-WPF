<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WPF_LED_Controller" xmlns:UserControls="clr-namespace:WPF_LED_Controller.UserControls" x:Class="WPF_LED_Controller.MainWindow"
        Title="LED Controller" ResizeMode="CanMinimize"  Width="297" Height="381" SizeToContent="WidthAndHeight">
    <Grid Margin="0,0,0,0" UseLayoutRounding="True">

        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Menu x:Name="mnMain" Height="32" VerticalAlignment="Top"  ClipToBounds="True" HorizontalAlignment="Left" Width="301">
            <MenuItem x:Name="miFile" Width="47" Header="File" Height="32" FontWeight="Bold">
                <MenuItem x:Name="miSave" Header="Save" Click="miSave_Click"/>
                <MenuItem x:Name="miOpen" Header="Open" Click="miOpen_Click"/>
            </MenuItem>
        </Menu>
        <Button x:Name="btnSet" Content="Set" HorizontalAlignment="Left" Margin="7,327,0,0" VerticalAlignment="Top" Width="75" Click="btnSet_Click"/>
        <UserControls:PortList x:Name="plPorts" HorizontalAlignment="Left" Margin="207,159,0,0" VerticalAlignment="Top"/>
        <UserControls:ColorPicker x:Name="cpColor"  HorizontalAlignment="Left" Margin="0,33,0,0" VerticalAlignment="Top" MouseMove="cpColor_MouseMove" Height="225"/>


        <UserControls:PreviewLabel x:Name="pwlSaved" HorizontalAlignment="Left" Height="58" Margin="2,263,0,0" VerticalAlignment="Top" Width="91"/>
        <UserControls:PreviewLabel x:Name="pwlHover" HorizontalAlignment="Left" Height="59" Margin="111,263,0,0" VerticalAlignment="Top" Width="91"/>





    </Grid>
</Window>
    
   
