<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WPF_LED_Controller" x:Class="WPF_LED_Controller.MainWindow"
        Title="LED Controller" Height="363" Width="359" ResizeMode="CanMinimize" SizeToContent="WidthAndHeight" DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Window.Resources>

        <Style x:Name="Border" x:Key="BorderPreview" TargetType="Border">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="5" />
            <Setter Property="Width" Value="90"/>
            <Setter Property="Height" Value="30"/>
        </Style>
        <Style x:Name="SavedHover" x:Key="SavedHoverPanel" TargetType="StackPanel">
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Height" Value="57"/>
            <Setter Property="Width" Value="90" />
        </Style>
    </Window.Resources>
    <Grid Margin="0,0,0,-3">

        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Menu x:Name="mnMain" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="353" ClipToBounds="True">
            <MenuItem x:Name="miFile" Width="47" Header="File" Height="32" FontWeight="Bold">
                <MenuItem x:Name="miSave" Header="Save" Click="miSave_Click"/>
                <MenuItem x:Name="miOpen" Header="Open" Click="miOpen_Click"/>
            </MenuItem>
        </Menu>
        <local:ColorPicker x:Name="cpColor" HorizontalAlignment="Left" Margin="6,36,0,0" VerticalAlignment="Top" MouseMove="cpColor_MouseMove" MouseLeftButtonUp="cpColor_MouseLeftButtonUp" MouseDown="cpColor_MouseDown" MouseLeftButtonDown="cpColor_MouseLeftButtonDown" Height="203" Width="203"/>
    
        <StackPanel Style="{StaticResource SavedHoverPanel}" Margin="6,239,0,0" >
            <Label Content="Saved" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <Border Style="{StaticResource BorderPreview}">
                <Label x:Name="lblSaved" Content=""/>
            </Border>
        </StackPanel>
        
        <StackPanel Style="{StaticResource SavedHoverPanel}" Margin="119,239,0,0">
            <Label Content="Hover" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <Border Style="{StaticResource BorderPreview}">
                <Label x:Name="lblHover" Content=""/>
            </Border>
        </StackPanel>
        <Button Content="Set" HorizontalAlignment="Left" Margin="10,310,0,0" VerticalAlignment="Top" Width="75"/>
    
        <StackPanel HorizontalAlignment="Left" Height="82" Margin="209,37,0,0" VerticalAlignment="Top" Width="80">
            <local:RGBBox x:Name="rgbRed" Text="R" TextChanged="rgbRed_TextChanged"/>
            <local:RGBBox x:Name="rgbGreen" Text="G" TextChanged="rgbGreen_TextChanged" Margin="-1,0,-21,0"/>
            <local:RGBBox x:Name="rgbBlue" Text="B" TextChanged="rgbBlue_TextChanged"/>
        </StackPanel>
        <Button x:Name="btnRefresh" Content="Refresh" HorizontalAlignment="Left" Margin="239,310,0,0" VerticalAlignment="Top" Width="50" Click="btnRefresh_Click"/>
        <local:PortList x:Name="plPorts" HorizontalAlignment="Left" Margin="239,205,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
    
   
