<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WPF_LED_Controller" x:Class="WPF_LED_Controller.MainWindow"
        Title="MainWindow" Height="435.896" Width="527.985">
    <Window.Resources>
        <Style x:Name="Border" x:Key="BorderPreview" TargetType="Border">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1,2,1,2"/>
            <Setter Property="Width" Value="90"/>
            <Setter Property="Height" Value="35"/>
        </Style>

    </Window.Resources>
    <Grid Margin="0,0,-5,0" HorizontalAlignment="Left" Height="409" VerticalAlignment="Top">

        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Menu x:Name="mnMain" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="525" ClipToBounds="True">
            <MenuItem x:Name="miFile" Width="47" Header="File" Height="32" FontWeight="Bold">
                <MenuItem x:Name="miSave" Header="Save" Click="miSave_Click"/>
                <MenuItem x:Name="miOpen" Header="Open" Click="miOpen_Click"/>
            </MenuItem>
            <MenuItem Header="Settings"/>
        </Menu>
        <local:ColorPicker x:Name="cpColor" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" MouseMove="cpColor_MouseMove" MouseLeftButtonUp="cpColor_MouseLeftButtonUp" MouseDown="cpColor_MouseDown" MouseLeftButtonDown="cpColor_MouseLeftButtonDown" Height="203" Width="203"/>


        <StackPanel Margin="10,240,417,107">
            <Label Content="Saved"/>
            <Border Style="{StaticResource BorderPreview}">
                <Label x:Name="lblSaved" Content=""/>
            </Border>
        </StackPanel>

        <StackPanel HorizontalAlignment="Left" Height="66" Margin="113,240,0,0" VerticalAlignment="Top" Width="100">
            <Label Content="Hover" />
            <Border Style="{StaticResource BorderPreview}">
                <Label x:Name="lblHover" Content="Label"/>
            </Border>
        </StackPanel>
        <Button Content="Set" HorizontalAlignment="Left" Margin="10,373,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
    
   
