<UserControl x:Name="RGBBoxControl" x:Class="WPF_LED_Controller.RGBBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="30">
    <UserControl.Resources>
        <Style TargetType="Border" x:Key="RGBText" x:Name="RGBText">
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1,2,1,2"/>
            <Setter Property="Width" Value="30" />
            <Setter Property="Height" Value="25" />
        </Style>

    </UserControl.Resources>

    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal">
        <Label x:Name="lblName" Content="Label" Foreground="White" FontWeight="Bold"/>
        <Border Style="{StaticResource RGBText}">
        <TextBox x:Name="txtRGB" TextChanged="txtRGB_TextChanged" Height="23" TextWrapping="Wrap" Width="30" VerticalAlignment="Center" HorizontalAlignment="Center" MaxLength="3" MaxLines="1" KeyDown="txtRGB_KeyDown"/>
        </Border>
    </StackPanel>
</UserControl>
