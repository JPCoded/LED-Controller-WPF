<UserControl x:Class="WPF_LED_Controller.PreviewLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            
             
             mc:Ignorable="d" HorizontalAlignment="Left" VerticalAlignment="Top" Height="56" Width="90">
    <UserControl.Resources>
       
        <ResourceDictionary>
       
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Dictionaries\PreviewLabelDict.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </UserControl.Resources>
    <Grid>
        <StackPanel Style="{StaticResource SavedHoverPanel}">
            <Label x:Name="lblTitle" Style="{StaticResource Title}" Content="Label"/>
           
                <Rectangle x:Name="recColor" Style="{StaticResource Rect}"/>
           
        </StackPanel>

    </Grid>
</UserControl>
