<UserControl x:Class="WPF_LED_Controller.UserControls.ColorSwatch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignWidth="201" Height="223">
    <Grid>
        <Canvas x:Name="canColor" HorizontalAlignment="Left" Height="201" VerticalAlignment="Top" Width="201" MouseLeftButtonDown="canColor_MouseLeftButtonDown" MouseMove="canColor_MouseMove">
            <Image x:Name="imgColor" />
            <Ellipse x:Name="EpPointer" Width="8" Height="8" Stroke="Black" Fill="White" />
        </Canvas>
        <Button x:Name="btnPrevious" Content="Button" HorizontalAlignment="Left" Margin="0,201,0,0" VerticalAlignment="Top" Width="75" Click="btnPrevious_Click"/>
        <Button x:Name="btnNext" Content="Button" HorizontalAlignment="Left" Margin="126,201,0,0" VerticalAlignment="Top" Width="75" Click="btnNext_Click"/>
        <Label x:Name="lblTrack" Content="Label" HorizontalAlignment="Left" Margin="88,201,0,0" VerticalAlignment="Top" FontSize="8" Foreground="White"/>

    </Grid>
</UserControl>
